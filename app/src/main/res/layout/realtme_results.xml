<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="105px"
    tools:context="com.wekebere.afterhome.View_realtime">
    <!-- TODO: Update blank fragment layout -->
<ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:fillViewport="true"
       android:orientation="vertical"
       android:scrollbars="none"
       android:background="@color/white_color">
       <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
           <TextView
               android:id="@+id/timer_value"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:textSize="16pt"
               android:layout_marginTop="10px"
               android:padding="10dp"
               android:layout_marginBottom="20px"
               android:text="100s"/>
           <TextView
               android:id="@+id/start_again"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:textSize="10pt"
               android:layout_marginLeft="20px"
               android:layout_marginRight="20px"
               android:visibility="gone"
               android:textColor="@color/white_color"
               android:background="@color/colorAccent"
               android:layout_marginTop="10px"
               android:padding="10dp"
               android:layout_marginBottom="20px"
               android:text="Start diagnosis"/>
           <TextView
               android:id="@+id/dialog_info"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:textSize="8pt"
               android:layout_marginTop="10px"
               android:padding="10dp"
               android:layout_marginBottom="20px"
               android:text="Processing"/>
           <HorizontalScrollView
               android:id="@+id/scroll_linechart"
               android:layout_width="match_parent"
               android:fillViewport="true"
               android:layout_height="match_parent"
               android:layout_marginBottom="45dp"
               android:layout_marginTop="15dp">
               <LinearLayout
                   android:layout_height="match_parent"
                   android:layout_width="wrap_content"
                   android:orientation="vertical" >
               <com.github.mikephil.charting.charts.LineChart
                   android:id="@+id/line_chart"
                   android:layout_width="1000dp"
                   android:layout_height="match_parent"
                   android:layout_marginBottom="10px"
                   android:layout_marginTop="20px"></com.github.mikephil.charting.charts.LineChart>
               </LinearLayout>
           </HorizontalScrollView>
 </LinearLayout></ScrollView>
</FrameLayout>
